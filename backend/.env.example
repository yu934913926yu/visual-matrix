# Flask配置
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-change-this-in-production

# 数据库配置
DATABASE_URL=sqlite:///visual_matrix.db
# 生产环境使用PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/visual_matrix

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 微信OAuth配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_REDIRECT_URI=http://localhost:5000/auth/wechat/callback

# 支付配置
# 支付宝
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

# 微信支付
WECHAT_PAY_MCH_ID=your-wechat-mch-id
WECHAT_PAY_APP_ID=your-wechat-pay-app-id
WECHAT_PAY_API_KEY=your-wechat-pay-api-key

# AI服务配置
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# 前端URL（用于OAuth回调等）
FRONTEND_URL=http://localhost:3000

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=7  # days

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password